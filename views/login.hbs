<body class="container mt-3">
     <h4 class="text-center">Login here</h4>

    <form  method="POST" action="/sendMail" onsubmit="storeName()">

        <div class="form-group" >
            <label for="exampleInputEmail1">Full Name</label>
            <input type="text" class="form-control" name="name" id="userName" aria-describedby="emailHelp" required placeholder="Enter Name" >
          </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" required placeholder="Enter Email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

        <div class="text-center">
          <button type="submit" id="otpBtn" class="btn btn-info">Get OTP!</button>
        </div>
    </form>

    <script>
      localStorage.removeItem('userName');
      function storeName()
      {
            let userName = document.getElementById('userName').value;
        localStorage.setItem('userName', userName);
      }
    </script>
</body>